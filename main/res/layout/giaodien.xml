<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nhathuoc5"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="Quản Lý Nhà Thuốc "
        android:textColor="#FFEB3B"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnQLLoaiThuoc"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/loaithuoc"
            android:text="Loại Thuốc"
            android:textAllCaps="false"
            android:textColor="#C80E0706"
            android:textSize="22dp" />

        <Button
            android:id="@+id/btnQLNhaThuoc"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/nhathuoc"
            android:text="Nhà thuốc"
            android:textAllCaps="false"
            android:textColor="#F44336"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHoaDon"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/hoadon"
            android:text="Hóa Đơn"
            android:textAllCaps="false"
            android:textColor="#C80E0706"
            android:textSize="22dp" />

        <Button
            android:id="@+id/btnChiTiet"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/chitiet"
            android:text="Bán Lẻ"
            android:textAllCaps="false"
            android:textColor="#F44336"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDangXuat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFC107"
            android:gravity="center"
            android:text="Thoát"
            android:textAllCaps="false"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>