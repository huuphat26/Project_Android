<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="1dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgshow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/tien">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#8BC34A"

        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tvSoHoaDon"
            style="@style/textview"
            android:text="HD01" />

        <TextView
            android:id="@+id/tvMaThuoc"
            style="@style/textview"
            android:text="Thuoc01" />

        <TextView
            android:id="@+id/tvNgayIn"
            style="@style/textview"
            android:text="30/05/2020" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgDetailHD"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/colorAccent"
        android:src="@drawable/ic_baseline_list_24"></ImageView>
</LinearLayout>